{
  "title": "Elo API (Java)",
  "description": "elastic.io component for the ELO API",
  "credentials": {
    "fields": {
      "ixUrl": {
      	"label": "IX URL",
      	 "required": true,
        "viewClass": "TextFieldView"
      },
      "username": {
        "label": "Username",
        "required": true,
        "viewClass": "TextFieldView"
      },
      "password": {
        "label": "Password",
        "required": true,
        "viewClass": "PasswordFieldView"
      }
    },
    "verifier": "com.elo.elastic.EloCredentialsVerifier"
  },
  "triggers": {
    "ReadDir": {
      "main": "com.elo.elastic.ReadDir",
      "type": "polling",
      "title": "ReadDir",
      "description": "ReadDir",
      "fields": {
        "guid": {
          "label": "guid",
          "required": false,
          "viewClass": "TextFieldView"
        },
        "id": {
          "label": "id",
          "required": false,
          "viewClass": "TextFieldView"
        },
        "path": {
          "label": "path",
          "required": false,
          "viewClass": "TextFieldView"
        }
      },
      "metadata": {
        "out": "./schemas/ExtendedEloObject.json"
      }
    },
    "ReadDoc": {
      "main": "com.elo.elastic.ReadDoc",
      "type": "polling",
      "title": "ReadDoc",
      "description": "ReadDoc",
      "fields": {
        "guid": {
          "label": "guid",
          "required": false,
          "viewClass": "TextFieldView"
        },
        "id": {
          "label": "id",
          "required": false,
          "viewClass": "TextFieldView"
        },
        "path": {
          "label": "path",
          "required": false,
          "viewClass": "TextFieldView"
        }
      },
      "metadata": {
        "out": "./schemas/ExtendedEloObject.json"
      }
    }
  },
  "actions": {
    "CreateDir": {
      "main": "com.elo.elastic.CreateDir",
      "type": "polling",
      "title": "CreateDir",
      "description": "CreateDir",
      "fields": {
        "label": {
          "label": "label",
          "required": true,
          "viewClass": "TextFieldView"
        },
        "maskId": {
          "label": "maskId",
          "required": true,
          "viewClass": "TextFieldView"
        },
        "type": {
          "label": "type",
          "required": true,
          "viewClass": "NumberFieldView"
        }
      },
      "metadata": {
        "out": "./schemas/Int.json"
      }
    }
  }
}
