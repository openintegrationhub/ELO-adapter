{
  "title": "Elo API (Java)",
  "description": "elastic.io component for the ELO API",
  "credentials": {
    "fields": {
      "ixUrl": {
      	"label": "IX URL",
      	 "required": true,
        "viewClass": "TextFieldView"
      },
      "username": {
        "label": "Username",
        "required": true,
        "viewClass": "TextFieldView"
      },
      "password": {
        "label": "Password",
        "required": true,
        "viewClass": "TextFieldView"
      }
    },
    "verifier": "com.elo.elastic.EloCredentialsVerifier"
  },
  "actions": {
    "CreateDir": {
      "main": "com.elo.elastic.CreateDir",
      "type": "polling",
      "title": "CreateDir",
      "description": "CreateDir",
      "fields": {
        "label": {
          "label": "label",
          "required": true,
          "viewClass": "TextFieldView"
        },
        "maskId": {
          "label": "maskId",
          "required": true,
          "viewClass": "TextFieldView"
        },
        "type": {
          "label": "type",
          "required": true,
          "viewClass": "NumberFieldView"
        }
      },
      "metadata": {
        "out": "./schemas/CreateDir.out.json"
      }
    }
  }
}
